<Window x:Class="Cliente.VentanaPersonalizarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cliente"
        mc:Ignorable="d"
        Title="VentanaPersonalizarPerfil" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbNombreUsuario" HorizontalAlignment="Left" Margin="540,163,0,0" TextWrapping="Wrap" Text="Nombre de usuario" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbDescripcion" HorizontalAlignment="Left" Margin="481,267,0,0" TextWrapping="Wrap" Text="Descripción" VerticalAlignment="Top" Width="238" Height="86"/>
        <Button x:Name="btnConfirmar" Content="Confirmar" HorizontalAlignment="Left" Margin="189,371,0,0" VerticalAlignment="Top" Click="btnConfirmar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="575,371,0,0" VerticalAlignment="Top" Click="btnCancelar_Click"/>
        <Button x:Name="btnSubirFoto" Content="Subir Foto de Perfil" HorizontalAlignment="Left" Margin="165,267,0,0" VerticalAlignment="Top" Click="btnSubirFoto_Click"/>

    </Grid>
</Window>
